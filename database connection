CREATE DATABASE IF NOT EXISTS ecommerce_dashboard;
USE ecommerce_dashboard;
-- Users Table
CREATE TABLE users (
    id INT PRIMARY KEY,
    first_name VARCHAR(100),
    last_name VARCHAR(100),
    email VARCHAR(150),
    age INT,
    gender VARCHAR(10),
    state VARCHAR(100),
    street_address TEXT,
    postal_code VARCHAR(20),
    city VARCHAR(100),
    country VARCHAR(100),
    latitude DECIMAL(10, 6),
    longitude DECIMAL(10, 6),
    traffic_source VARCHAR(100),
    created_at DATETIME
);

-- Orders Table
CREATE TABLE orders (
    order_id INT PRIMARY KEY,
    user_id INT,
    status VARCHAR(50),
    gender VARCHAR(10),
    created_at DATETIME,
    returned_at DATETIME,
    shipped_at DATETIME,
    delivered_at DATETIME,
    num_of_item INT,
    FOREIGN KEY (user_id) REFERENCES users(id)
);
ALTER TABLE orders 
MODIFY returned_at DATETIME NULL,
MODIFY shipped_at DATETIME NULL,
MODIFY delivered_at DATETIME NULL;





